<Window x:Class="RS485.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:extensions="clr-namespace:RS485.UI.Extension"
        xmlns:model="clr-namespace:RS485.UI.Model"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:RS485.UI.ViewModel"
        d:DataContext="{d:DesignInstance vm:MainViewModel, IsDesignTimeCreatable=True}"
        Title="{Binding WindowTitle}" Height="600" Width="800"
        Icon="../Resources/icon.png">
    <Grid>
        <ComboBox Margin="250" FontSize="40" HorizontalContentAlignment="Center"
                  ItemsSource="{Binding Source={extensions:Enum {x:Type model:Station}}}"
                  DisplayMemberPath="Description"
                  SelectedValue="{Binding Station}"
                  SelectedValuePath="Value"/>
    </Grid>
</Window>
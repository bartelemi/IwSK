<Application x:Class="RS485.UI.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:RS485.UI.Helpers.Converters"
             xmlns:converter="clr-namespace:RS485.Common.Converters;assembly=RS485.Common"
             >
    <Application.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:EnumToBooleanConverter       x:Key="EnumToBooleanConverter" />
        <converters:InverseBooleanConverter      x:Key="InverseBooleanConverter" />
        <converters:NullToBooleanConverter       x:Key="NullToBooleanConverter" />
        <converters:NullToVisibilityConverter    x:Key="NullToVisibilityConverter" />
        <converter:EnumToBoolConverter    x:Key="EnumToBool" />
        <converter:EnumToVisibilityConverter x:Key="EnumToVisibility" />
        <converter:EnumValueToEnumDescriptionConverter x:Key="EnumValueToEnumDescription" />
    </Application.Resources>
</Application>